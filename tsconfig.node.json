{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": false,    // Relaxed
    "moduleDetection": "auto",   // More flexible
    "noEmit": true,

    /* Linting */
    "strict": false,             // Less strict
    "noUnusedLocals": false,     // Allow unused locals
    "noUnusedParameters": false, // Allow unused parameters
    "noFallthroughCasesInSwitch": false // Allow fallthrough in switch cases
  },
  "include": ["vite.config.ts"]
}
